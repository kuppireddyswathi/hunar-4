def flames_game(name1, name2):
    # Remove spaces and convert names to lowercase
    name1 = name1.replace(" ", "").lower()
    name2 = name2.replace(" ", "").lower()

    # Find common letters
    common_letters = [letter for letter in name1 if letter in name2]
    
    # Remove common letters from both names
    for letter in common_letters:
        name1 = name1.replace(letter, "", 1)
        name2 = name2.replace(letter, "", 1)

    # Calculate the total count of remaining letters
    total_count = len(name1) + len(name2)

    # FLAMES list
    flames = ["Friends", "Lovers", "Affectionate", "Marriage", "Enemies", "Siblings"]

    # Calculate index based on total_count
    while len(flames) > 1:
        split_index = total_count % len(flames) - 1
        if split_index >= 0:
            flames = flames[split_index + 1:] + flames[:split_index]
        else:
            flames = flames[:len(flames) - 1]

    return flames[0]

# Get names from the user
name1 = input("Enter the first name: ")
name2 = input("Enter the second name: ")

# Run the FLAMES game and show the result
result = flames_game(name1, name2)
print(f"The relationship between {name1} and {name2} is: {result}")
